
@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>
<form method="post>
    <input type="hidden" name="id" value="@Model.Id"/>
    <input type="text" name="Name" class="form-control" vlaue="@Model.Name" placeholder="Name" />
    <br />
    <input type="date" name="Dob" class="form-control" value="@Model.Dob.ToString("yyyy-MM-dd")" placeholder="Dob" />
    <br />
    <input type="text" name="Cgpa" class="form-control" value="@Model.Cgpa" placeholder="Cgpa" />
    <br />
    <input type="submit" value="Create" class="btn btn-success" />
</form>
